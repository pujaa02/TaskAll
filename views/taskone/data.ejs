  <body>
    <%= console.log(((len.length)/5)+1) %>
    <%- include("form") -%>
    <%= console.log("this is length rounded :") %>
    <% console.log(Math.ceil(len.length/5)) %>
    <% let val= Math.ceil(len.length/5)%>
    <div class="btns">
      <button name="first" onclick="window.location.href='/fetch2/<%=1%>/<%=search%>'"<%= page==1 ? 'disabled':''%> >
        <<
      </button>
      <button
        name="pre"
        onclick="window.location.href='/<%=Number(page)-1%>/fetch2/<%=search%>'"<%= page==1 ? 'disabled':'' %>>
        <
      </button>
      <span id="span"><%=page%></span>
      <button
        name="next"
        onclick="window.location.href='/fetch2/<%=Number(page)+1%>/<%=search%>'" <%=page==val ? 'disabled':'' %>
      >
        >
      </button>
      <button name="last" onclick="window.location.href='/fetch2/<%=val%>/<%=search%>'" <%=page==val ? 'disabled':'' %>
        >>>
      </button>
      
    </div>
    <table>
      <tr>
        <th>Student_ID</th>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Last Name</th>
        <th>Date_of_Birth</th>
        <th>Mobile Number</th>
        <th>Email</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Country</th>
        <th>ZipCode</th>
        <th>Blood_Group</th>
      </tr>
      <%users.forEach((user)=>{%>
      <tr>
        <td><%= user.id%></td>
        <td><%= user.firstname%></td>
        <td><%= user.middlename%></td>
        <td><%= user.lastname%></td>
        <td><%= user.date_of_birth%></td>
        <td><%= user.mobile_number%></td>
        <td><%= user.email%></td>
        <td><%= user.address%></td>
        <td><%= user.city%></td>
        <td><%= user.state%></td>
        <td><%= user.country%></td>
        <td><%= user.zipcode%></td>
        <td><%= user.blood_group%></td>
      </tr>
      <%})%>
    </table>
  </body>
